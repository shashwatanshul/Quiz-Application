<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<title>Phonepay Payment</title>
<style>
  input {
      border: 1px solid #000;
      padding: 5px;
  }
</style>
</head>
<body>

<section style="background-color: #eee;">
<h3 class="text-center py-5">PHONEPAY PAYMENT GATEWAY</h3>
  <div class="container py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body mx-1 my-2">
            <div class="d-flex align-items-center">
              <div>
                <i class="fab fa-cc-visa fa-4x text-black pe-3"></i>
              </div>
              <div>
                <p class="d-flex flex-column mb-0">
                  <span class="small text-muted"></span>
                </p>
              </div>
            </div>
            <div class="pt-3">
              <div class="d-flex flex-row pb-3">
                <div class="rounded border border-primary border-2 d-flex w-100 p-3 align-items-center"
                  style="background-color: rgba(18, 101, 241, 0.07);">
                  <div class="d-flex align-items-center pe-3">
                    <input class="form-check-input" type="radio" name="radioNoLabelX" id="radioNoLabel11"
                      value="" aria-label="..." checked />
                  </div>
                  <div class="d-flex flex-column">
                    <p class="mb-1 small text-primary">Total amount</p>
                    <h6 class="mb-0 text-primary">&#x20b9 <%= subtotal %></h6>
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center pb-1">
              <a href="http://localhost:3000/cart" class="text-muted">Go Back</a>
              <form id="paymentForm" action="/paybutton/pay" method="GET">
                <!-- Hidden input fields for each parameter -->
                <input type="hidden" name="subtotal" value="<%= subtotal %>" required>
                <input type="hidden" name="cartItems" value="<%= JSON.stringify(cartItems) %>" required>
                <input type="hidden" name="currentUser" value="<%= JSON.stringify(currentUser) %>" required>
                <div class="d-flex pb-1 mt-2">
                  <label for="tableNumber">Enter Table Number :- </label>
                  <input type="number" id="tableNumber" name="tableNumber" placeholder="Enter Table Number" required>
                </div>
                <div class="d-flex pb-1">
                  <label for="mobileNumber">Enter Mobile Number :-<br>(Do not start with zero)</label>
                  <input type="tel" id="mobileNumber" name="mobileNumber" pattern="[0-9]{10}" placeholder="Enter Mobile Number" required>
                </div>
                <button type="submit" id="paymentButton" class="btn btn-danger btn-lg">Proceed to Payment</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
